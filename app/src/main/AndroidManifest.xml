<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ultramegasoft.flavordex2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EntryListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EntryDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".EntryListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EntryListActivity" />
        </activity>

        <provider
            android:name=".provider.FlavordexProvider"
            android:authorities="com.ultramegasoft.flavordex2"
            android:enabled="true"
            android:exported="false">
        </provider>
    </application>

</manifest>
